<local:ucCustom x:Class="RMTV_recorder.Log_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RMTV_recorder"
             mc:Ignorable="d" 
             Height="Auto" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="0" x:Name="tb_log" IsReadOnly="True" Height="450" Background="OldLace" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="2" x:Name="btn_close" Content="Close" Width="50" Click="Button_Close_Click"/>
    </Grid>
</local:ucCustom>
