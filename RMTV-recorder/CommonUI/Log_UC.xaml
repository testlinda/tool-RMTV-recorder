<local:ucCustom x:Class="RMTV_recorder.Log_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RMTV_recorder"
             mc:Ignorable="d" 
             Height="500" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="176" />
            <RowDefinition Height="255"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="0" x:Name="tb_log" IsReadOnly="True" Height="430" Background="OldLace" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,0,1" Grid.RowSpan="2"/>
        <Button Grid.Row="3" x:Name="btn_close" Content="Close" Width="50" Click="Button_Close_Click" Margin="215,0"/>
    </Grid>
</local:ucCustom>
